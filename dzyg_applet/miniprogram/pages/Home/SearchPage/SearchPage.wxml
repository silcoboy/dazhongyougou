<van-search
  value="{{ key }}"
  shape="round"
  background="#C00000"
  placeholder="请输入搜索关键词"
  bind:search="search"
  bind:change="onChange"
/>
<view  class="history-box">
      <block wx:if="{{list.length==0}}">
            <block wx:if="{{!blank}}">
                  <view class="history-title">
                        <view >历史搜索</view>
                        
                  </view>
                  <block wx:if="{{hislist.length==0}}">
                        <view class="nosearch">您还没搜索过哟，赶快试试吧</view>
                  </block>
                  <view wx:if="{{hislist.length>0}}" class="history-list">
                        <view wx:for="{{hislist}}" wx:key="*this" >
                              <view bindtap="choosekey"  class="history-item" data-key="{{item}}" >{{item}}</view>
                        </view>
                  </view>
            </block>
      </block>
</view>