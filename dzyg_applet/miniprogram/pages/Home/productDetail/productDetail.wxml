<!-- 商品详情 -->
<view  class="detailcontainer">
  <image src="../../../img/home/product-detail.jpg" class='detail-img'></image>
  <view wx:for="{{detailsList.imgs}}" wx:key="index">
  <image class="detailList" src="{{item}}" bindtap="previewImages" data-index="{{index}}"></image>
  </view>
</view>


<view class='Topbar' wx:if='{{backTop}}'>
  <view class='bar-box'>
    <view class="bar-item {{baritem == 0?'active':''}}">商品</view>
    <view class="bar-item {{baritem == 1?'active':''}}">自提点</view>
    <view class="bar-item {{baritem == 2?'active':''}}">产地</view>
    <view class="bar-item {{baritem == 3?'active':''}}">详情</view>
  </view>
</view>

<view class='backTop' wx:if='{{backTop}}' catchtap='goTop'>
  <image src='../../../img/home/top.png'></image>
  <view class='back'>回顶部</view>
</view>




<!-- 底部组件 -->
<van-goods-action>
  <van-goods-action-icon icon="wap-home-o" text="首页" bind:click="onClickHome" />
  <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickCart"  />
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    bind:click="AddCart"
  />
  <van-goods-action-button text="立即购买" bind:click="Bynow" />
</van-goods-action>