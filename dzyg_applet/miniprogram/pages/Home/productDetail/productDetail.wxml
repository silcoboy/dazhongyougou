<view class='top-box'>
  <swiper >
    <swiper-item   wx:for="{{detailsList.picUrl}}" wx:key="index">
    <view style='height:550rpx;width:100%;'>
      <image style='height:550rpx;width:100%;' src="{{item}}" bindtap="previewImage" data-index="{{index}}"></image>
    </view>
    </swiper-item>
  </swiper>

  <view class='commodity-value-box'>
    <!-- 价格盒子 -->
    <view class='value-box'>
      <view style='font-size:28rpx;height:60rpx;'>￥
        <text style='font-size:50rpx;'>{{detailsList.price}}</text></view>
      <view style='font-size:20rpx;height:40rpx;'>市场价
        <text style='text-decoration:line-through;'>￥{{detailsList.oldPrice}}</text>
      </view>
    </view>
    <!-- 倒计时盒子 -->
    <view class='time-box'>
      <view class='box2'>
        <view>{{detailsList.resume}}</view>
      </view>
    </view>

  </view>
</view>
<view class='commodity-message'>
  <!-- 产品 -->
  <view class='commodity-message-top'>
    <view class='message-box'>
      <view class='commodity-name'>{{detailsList.name}}</view>
      <view class='commodity-sales'>剩余
        <text style='color:#FE4C4C;'>{{detailsList.curNum}}</text>件，累计销售{{detailsList.totalBuyNum}}件</view>
    </view>
    <!-- 分享 -->
    <view class='share'>
      <image src='../../../img/home/fenxiang.png'></image>
      <view style='font-size:20rpx; text-align:center; color:#6a5e5c;'>分享</view>
    </view>
  </view>

  <view class='commodity-message-bottom'>
    <!-- <image></image> -->
    <text style='color: #6a5e5c;'>现在下单,预计在明天下午可自提</text>
  </view>
</view>

