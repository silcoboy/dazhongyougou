page{
  background-color: #F5F5F5;
}

.nav{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #fff;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  z-index: 99;
}

.nav-item{
  font-size: 28rpx;
  width: 25%;
  text-align: center;
  line-height: 80rpx;
  color: #666;
}

.active{
  color: red;
}
.navborder{
  position: absolute;
  height: 7rpx;
  background: red;
  border-radius: 5rpx;
  transition: all .4s;
  bottom: 0;
  box-shadow:0px 2px 2px #E46E47;
}


/* 列表样式 */
.Order{
  margin-top: 45px;
  height: 310px;
}
.orderList{
  background: #fff;
  width: 96%;
  border-radius: 20rpx;
  margin: 15rpx auto;
}
.orderList .orderList-top{
  border-bottom: 1rpx solid #f1f1f1;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.orderList .orderList-top .t1{
  color: #333;
}
.orderList .orderList-top .t2{
  color: red; 
  font-weight: 600;
}
.orderList .orderList-product-box{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f1f1f1;
  align-items: center;
  height: 100px;
}
.center {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}
.content {
  width: calc(100% - 130rpx);
  padding: 0 20rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  justify-content: space-between;
}
.book_author {
  padding-top: 10rpx;
  font-size: 26rpx;
  letter-spacing: 3rpx;
  color: #c2c2c2;
}
.text-cut {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.book {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.orderList .orderList-bottom{
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.orderList .orderList-bottom .t1{
  color: #333;
  margin-left: 8px;
}
.orderList .orderList-bottom .t1 .price{
  font-size: 32rpx;
  font-weight: 600;
  color: #f80202;
}
.orderList .orderList-bottom .t2{
  color: #333;
  border:1rpx solid #A6A6A6;
  padding: 4rpx 20rpx;
  border-radius: 40rpx;
}

/* 中间商品样式 */
.product-box-product{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
  color: #A1A1A1;
  font-size: 26rpx;
}
.product-img{
  width: 180rpx;
  height: 180rpx;
}
.product-text{
  margin-left: 20rpx;
}
.product-text view{
  font-size: 28rpx;
  padding: 8rpx 0;
  color: #646464;
}