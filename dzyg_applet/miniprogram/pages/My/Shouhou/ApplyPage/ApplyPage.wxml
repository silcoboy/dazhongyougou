  <van-divider contentPosition="center">精心挑选的商品就这样放弃了吗</van-divider>
  <van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell title="不想要了" clickable data-name="1" bind:click="onClick" data-reason="不想要了">
      <van-radio slot="right-icon" checked-color="#1989FA"  name="1" />
    </van-cell>
    <van-cell title="商品买错了/买多了" clickable data-name="2" bind:click="onClick" data-reason="商品买错了/买多了">
      <van-radio slot="right-icon" checked-color="#1989FA" name="2" />
    </van-cell>
    <van-cell title="商品损坏" clickable data-name="3" bind:click="onClick" data-reason="商品损坏">
      <van-radio slot="right-icon" checked-color="#1989FA" name="3" />
    </van-cell>
    <van-cell title="商品丢失" clickable data-name="4" bind:click="onClick" data-reason="商品丢失">
      <van-radio slot="right-icon" checked-color="#1989FA" name="4" />
    </van-cell>
    <van-cell title="其它理由" clickable data-name="5" bind:click="onClick">
      <van-radio slot="right-icon" checked-color="#1989FA" name="5" />
    </van-cell>
  </van-cell-group>
</van-radio-group>
<view class="course-wrap" wx:if="{{radio==5}}">
<textarea placeholder="请输入理由......" class="course-input" maxlength="2000" bindinput="getCourse"></textarea>
</view>



<van-goods-action>
