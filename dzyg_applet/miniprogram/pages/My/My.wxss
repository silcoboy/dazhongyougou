/* pages/my/my.wxss */
page{
  position: relative;
  background-color: #F5F5F5;
  height: 100%;
}
.top-box{
  position: relative;
  height: 230rpx;
  width: 100%;
  background: -webkit-linear-gradient(top,#C00000 ,#FA7846);
}

.my-message-box{
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  width: 100%;
}

.avatar{
  margin-left: 20rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-top: 11rpx;
  margin-right: 10rpx;
}
.nickName{
  font-size:45rpx;
  font-weight: 500;
  line-height: 50rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.my-name-box{
  margin-left: 20rpx;
  color: #fff;
}

.my-songzi-box{
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -355rpx;
  width: 650rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: linear-gradient(to right,#5C5855, #3D3433);
  border-top-right-radius: 25rpx;
  border-top-left-radius: 25rpx;
  color: #E7CA93;
  padding: 0 30rpx;
}

.my-songzi{
  font-size: 32rpx;
  font-weight: 550;
}

.conditions{
  margin-left: 30rpx;
  font-size: 22rpx;
  text-decoration: underline;
  letter-spacing: 2rpx;
}

.history{
  font-size: 24rpx;
  position: absolute;
  right: 25rpx;
  width: 150rpx;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
  border-radius: 25rpx;
  color: #D0BC9D;
  border: 2rpx solid #D0BC9D;
}

.order-box{
  width: 710rpx;
  border-radius: 25rpx;
  margin: 20rpx;
  background-color: #fff;
  height: 280rpx;
}

.order-title{
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 4rpx solid #F5F5F5;
  font-weight: 550;
}

.order-state{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.order-state-item{
  width: 20%;
  height: 196rpx;
  text-align: center;
}

.state-img{
  margin: 30rpx 0 10rpx 0;
  width: 60rpx;
  height: 60rpx;
}
.state-imgs{
  margin: 30rpx 0 10rpx 0;
  width: 72rpx;
  height: 72rpx;
}
.state-imgs1{
  margin: 30rpx 0 10rpx 0;
