<view wx:if="{{!network500}}" catchtouchmove='{{stopPageScroll}}' style='height:{{swiperheight}}rpx;'>
  <view class='nav'>
    <block wx:for='{{navList}}' wx:key='{{index}}'>
      <view class='{{item.Style}} nav-item every' catchtap='navtap' id='{{index}}'  data-type="{{item.id}}">{{item.name}}</view>
    </block>
    <view class='navborder' style='left:{{left}}'></view>
  </view>

  <swiper bindchange="swiperChange" current="{{current}}" style='height:{{swiperheight}}rpx; margin-top:80rpx;'>
    <block wx:for="{{5}}" wx:key="key">
      <swiper-item>
        <scroll-view scroll-y="true" scroll-with-animation="true" style='height:{{swiperheight}}rpx;'>
        </scroll-view>
      </swiper-item>
    </block>
  </swiper>

<!-- 旧 -->
<view class="Ordercontainer">
  <view wx:for="{{OrderList}}" wx:key="index" class="Order">
            <view class='orderList' bindtap='orderListfun' data-id="{{item.id}}">
              <view class='orderList-top'>
                <text class='t1'>下单时间：{{item.createTime}}</text>
                <text class='t2'>{{item.statusName}}</text>
              </view>
              <view class='orderList-product-box'>
                
                <!-- <view class="center"> 
                        <view class="content">
                          <view class="book_author text-cut">订单号：{{item.orderSn}}</view>
                              <view class="book"> 
                                     <view class="book_author text-cut" >
                                    自提点：{{item.takeStoreName}}</view>
                                    <view class="book_author text-cut">取货时间：{{item.takeTime}}</view>
                                   
                              </view>
                        </view>
                  </view> -->
                  <block  wx:for="{{item.goodsList}}" wx:key="index">
                     <view class='product-box-product'>
                       <view>
                         <image src='{{item.goodsPic[0]}}' class='product-img'></image>
                       </view>
                      <view class='product-text'>
                       <view style='color:#3E3E3E;font-weight:600;'>{{item.goodsName}}</view>
                        <view>单价：￥{{item.goodsPrice}}  数量：×{{item.num}}</view>
                        <view>实付金额：<text style='color:#ED5F53;'>￥{{item.amount}}</text></view>
                       </view>
                    </view>
                    </block>

              </view>
              <view class='orderList-bottom'>
                <view class='t1'>共{{item.num}}件商品 实付: <text class='price'>￥{{item.amount}}</text></view>
                <view wx:if="{{item.orderStatus==1}}"
                          class="t3" catchtap="cancel" 
                          data-id="{{item.orderSn}}">取消订单</view>
                    <view wx:if="{{item.orderStatus==1}}"
                          class="t2" catchtap="pay" 
                          data-id="{{item.orderSn}}">立即支付</view>
                          
                          <view  wx:else
                          class="t2" catchtap="godetail" 
                          data-id="{{item.orderSn}}">查看详情</view>
              </view>
            </view>
  </view>
</view>



</view>
<!--无内容显示-->
<view class="nocontent" wx:if="{{OrderList.length==0}}">
      <image  src="../../../img/order/blank.png"></image>
      <view class='blank_text'>没有找到对应订单信息~</view>
</view>


<view class="container" hidden="{{!appLoadingStatue}}" catchtouchmove='{{stopPageScroll}}'>
    <i-spin fix></i-spin>
</view>

<i-message id="message" />

<view class='container' wx:if="{{network500}}">
  <network500 id="network-500" bindtap="connectfunc"></network500>
</view>