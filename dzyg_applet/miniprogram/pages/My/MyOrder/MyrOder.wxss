/* 订单样式 */
.center {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}
.content {
  width: calc(100% - 130rpx);
  padding: 0 20rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  justify-content: space-between;
}
.book {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.book_author {
  padding-top: 10rpx;
  font-size: 26rpx;
  letter-spacing: 3rpx;
  color: #c2c2c2;
}
.text-cut {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bottom {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0 0 0;
}
.price {  
  color: #f80202;
}
.confirm {
  width: 110rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 25rpx;
  color: #fbbd08;
  border: 1rpx solid #fbbd08;
  margin-left: 20rpx;
}
