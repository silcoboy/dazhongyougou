.recommendationbox{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-around;
  
}
.recommendationitem{
  display: flex;
  flex-direction: column;
  width: 47%;
  height: 283px;
  background-color:#fff;
  margin-top: 10px;
  font-size: 28rpx;
  border-radius: 20rpx;
 }
 .productpicture{
  /* width: 170px; */
  width: 100%;
  height: 250px;
  border-radius: 25rpx 25rpx 0rpx 0rpx;
}
.describe{
  font-size: 30rpx;
  width:100%;
  height: 60px;
  font-weight: 600;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space:overflow;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  margin-left: 5px;
  margin-top: 3px;
}
.priceitem{
  display: flex;
  /* margin-top: 0px; */
}
.price{
  font-size: 36rpx;
