  <!-- 自提点选择 -->
  <view class='evaluate-box box-common'bindtap="handleChooseAddress">
  <view class='box-title'>选择自提点</view>
  <view class='evaluate' >
    <image class='erweima'></image>
    <view class="code-box">
      <view class="store">自提点：{{Address.storeName}}</view>
      <view class="merchant">团长信息：{{Address.linkName}}</view>
    <view class="telephone">联系方式：{{Address.storePhone}}</view>
    <view class="address">提货地点：{{Address.storeAddress}}</view>
  </view>
  </view>
  </view>

  <view class='product-box'>
    <view class='product-box-top'>
      <text>预计在明天下午可自提</text>
      <text>{{totalNum}}件商品</text>
    </view>

    <block wx:for="{{CartList}}" wx:key="key">
      <view class='product-box-product'>
        <view>
          <image src='{{item.goodsPic[0]}}' class='product-img'></image>
        </view>
        <view class='product-text'>
          <view style='color:#3E3E3E;font-weight:600;'>{{item.goodsName}}</view>
          <view>单价：￥{{item.goodsPrice}}  数量：×{{item.num}}</view>
          <view>实付金额：<text style='color:#ED5F53;'>￥{{item.amount}}</text></view>
        </view>
      </view>
    </block>
  </view>

  <view class='jianglibox'>
    <text>松子奖励</text>
    <text>0</text>
  </view>

  <view class='bottombox'>
    <view class='bottom-box'>
      <text>商品活动</text>
      <text>-￥0.00</text>
    </view>
    <view class='bottom-box'>
      <text>社区活动</text>
      <text>-￥0.00</text>
    </view>
    <view class='bottom-box'>
      <text>当前可用松子为0个</text>
      <text>-￥0.00</text>
    </view>
  </view>
  <view style='height:108rpx;'></view>
  <view class='fixed-box'>
    <view class='fixed-box-total'>
      <view style='font-weight:600; font-size:30rpx;'>合计：<text style='color:#ED5F53;'>￥{{totalPrice}}</text></view>
      <!-- <view>总额：￥{{totalPrice}}　优惠：￥0.00</view> -->
    </view>
    <view class='paramtbtn' bindtap="handleOrderPay">去支付({{totalNum}})</view>
  </view>

</view>

<view class='mask' wx:if="{{maskShow}}" catchtouchmove='{{stopPageScroll}}' bindtap='hideshowToastboxfunc'></view>